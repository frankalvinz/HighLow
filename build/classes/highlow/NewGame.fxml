<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="highlow.NewGameController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" prefHeight="30.0" prefWidth="100.0" text="Highscore: ">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="44.0" prefHeight="30.0" prefWidth="100.0" text="Score:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <ImageView fx:id="cardImg" fitHeight="300.0" fitWidth="200.0" layoutX="50.0" layoutY="84.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="50.0" layoutY="384.0" text="High">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="214.0" layoutY="384.0" text="Low">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <CheckBox fx:id="high" layoutX="63.0" layoutY="422.0" mnemonicParsing="false" onAction="#highChecked" prefHeight="18.0" prefWidth="5.0" />
      <CheckBox fx:id="low" layoutX="224.0" layoutY="422.0" mnemonicParsing="false" onAction="#lowChecked" />
      <Button fx:id="confirmBtn" layoutX="115.0" layoutY="455.0" mnemonicParsing="false" onAction="#confirmBtnOnAction" prefHeight="30.0" prefWidth="70.0" text="Confirm" />
      <TextField fx:id="highScore" editable="false" layoutX="115.0" layoutY="16.0" promptText="0" />
      <TextField fx:id="score" editable="false" layoutX="115.0" layoutY="46.0" promptText="0" />
   </children>
</AnchorPane>
